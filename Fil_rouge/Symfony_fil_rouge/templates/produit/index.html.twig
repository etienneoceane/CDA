    <section>
        <div class="container bg-center">
            <div class="row p-3">

            <div class="col-12 mb-5 mt-3">
                <h1>Zone de saisie</h1>
                <form method="post" action="" id="formSaisi">
                    <div class="row">
                        <div class="form-group col-md-2">
                            <input type="text" name="photo" id="photo" class="form-control" placeholder="Photo">
                        </div>
                        <div class="form-group col-md-3">
                            <input type="text" name="nom" id="nom" class="form-control" placeholder="Nom">
                        </div>
                        <div class="form-group col-md-2">
                            <input type="text" name="prix" id="prix" class="form-control" placeholder="Prix">
                        </div>
                        <div class="form-group col-md-1" width="50%">
                            <select class="custom-select" name="status" id="status-select">
                                <option value="dispo">Dispo</option>
                                <option value="indispo">Indispo</option>
                            </select>
                        </div>
                        <div class="form-group col-md-2">
                            <input type="text" name="stock" id="stock" class="form-control" placeholder="Stock">
                        </div>
                        <div class="form-group col-md-2">
                            <input type="submit" class="btn-block btn btn-warning text-light font-weight-bold" value="+ Ajouter"></input>
                        </div>
                    </div>
                </form>

            </div>
                <div class="col-12">
                    <h1>Liste des produits</h1>
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Photo</th>
                            <th>Nom</th>
                            <th>Prix</th>
                            <th>Status</th>
                            <th>Stock</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for produit in produits %}
                            <tr>
                                <td><img src="/assets/src/{{ produit.photo }}" class="img-fluid" width="120px"></td>
                                <td>{{ produit.nom }}</td>
                                <td>{{ produit.prixht}} €</td>
                                <td>{% if produit.stock >0 %} <span class="text-success">Disponible</span>{% else %}<span class="text-danger">Indisponible</span>{% endif %}</td>
                                <td>{% if produit.stock >0 %}<span class="text-success">{{produit.stock}}</span>{% endif %}</td>
                                <td>
                                    <a href="{{ path('produit_show', {'id': produit.id}) }}"><i class="far fa-eye fa-2x mr-3 text-primary" title="Voir le produit"></i></a>
                                    <i class="far fa-edit fa-2x text-secondary" title="Editer le produit"><a href="#"></a></i>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="10">Aucun enregistrement trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </section>
{% endblock %}